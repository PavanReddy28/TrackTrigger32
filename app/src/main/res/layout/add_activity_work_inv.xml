<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".addActivityWorkInv">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#00BCD4"
        android:gravity="center"
        android:text="add new product here"
        android:textAllCaps="true"
        android:textColor="#F44336"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3D29F"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Product Name:"
                android:textColor="#D61313" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3D29F"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Product Id :#"
                android:textColor="#D61313" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3D29F"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Product Description:"
                android:textColor="#D61313" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3D29F"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Product Category:"
                android:textColor="#D61313" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="#E3D29F"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="Product Quantity:"
                android:textColor="#D61313" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/addTvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Product Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Product Id"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addTvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Product Description"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addTvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Product Category"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/addTvQuantity"
                android:layout_width="232dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Product Quantity"
                android:inputType="textPersonName"
                android:text="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addBtnAdd"
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addBtnSub"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/addBtnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="Add  Product" />

</LinearLayout>